{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": "off",
    "no-use-before-define": "off",
    "react/jsx-no-bind": "off",
    // Allow class components
    "react/prefer-stateless-function": "off"
  }
}
